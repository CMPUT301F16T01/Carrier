<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="false"
    android:focusable="false">

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Start: location"
        android:textSize="15sp"
        android:id="@+id/textView_startLocation"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="End: location brap brap 101010108 long long long long long street"
        android:textSize="15sp"
        android:id="@+id/textView_endLocation"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Price: $XX.XX"
        android:textSize="15sp"
        android:id="@+id/textView_price"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"/>

    <ImageView
        android:src="@android:drawable/ic_menu_compass"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_requestStatus"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowSpan="3"
        android:contentDescription="The status icon of this request."
        android:clickable="false"
        android:focusable="false"/>
</GridLayout>