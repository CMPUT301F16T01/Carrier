<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:layout_below="@+id/ImageView_phone_icon"
            android:layout_toEndOf="@+id/EditText_name"
            android:id="@+id/CancelEditPhoneButton"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:onClick="cancelEditPhoneNumber" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_face"
            android:id="@+id/ImageView_name_icon"
            android:layout_marginBottom="46dp"
            android:layout_above="@+id/ImageView_phone_icon"
            android:layout_alignParentStart="true" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/EditText_name"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginTop="171dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:focusable="false"
            android:clickable="false"
            android:background="@null"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none|textEmailAddress"
            android:text="name@name.com"
            android:ems="10"
            android:id="@+id/EditText_email"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_below="@+id/ImageView_email_icon"
            android:layout_alignParentStart="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_toStartOf="@+id/CancelEditEmailButton"
            android:background="@null" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_edit"
            android:id="@+id/PhoneEditIconImageButton"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/EditText_phone"
            android:layout_alignEnd="@+id/EditText_phone"
            android:onClick="editPhoneNumber" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_edit"
            android:id="@+id/EmailEditIconImageButton"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/EditText_email"
            android:layout_alignEnd="@+id/EditText_phone"
            android:onClick="editEmailAddress" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_save"
            android:id="@+id/EmailSaveEditButton"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/EmailEditIconImageButton"
            android:layout_alignEnd="@+id/EmailEditIconImageButton"
            android:onClick="saveEditedEmailAddress" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/CancelEditEmailButton"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/EmailEditIconImageButton"
            android:layout_toEndOf="@+id/EmailEditIconImageButton"
            android:visibility="invisible"
            android:onClick="cancelEditEmailAddress" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_save"
            android:id="@+id/PhoneSaveEditButton"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_alignTop="@+id/EditText_phone"
            android:layout_alignStart="@+id/PhoneEditIconImageButton"
            android:onClick="saveEditedPhoneNumber" />

        <TextView
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileTextView"
            android:textSize="36sp"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="32dp"
            android:layout_above="@+id/ImageView_name_icon"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|phone"
            android:ems="10"
            android:id="@+id/EditText_phone"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="1234567"
            android:focusable="false"
            android:clickable="false"
            android:background="@null"
            android:layout_below="@+id/ImageView_phone_icon"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_email2"
            android:id="@+id/ImageView_email_icon"
            android:layout_below="@+id/PhoneEditIconImageButton"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_phone"
            android:id="@+id/ImageView_phone_icon"
            android:layout_below="@+id/EditText_name"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>