<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimaryLight"
    android:clickable="false"
    android:focusable="false">

    <ImageView
        android:src="@android:drawable/ic_menu_compass"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_requestStatus"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowSpan="3"
        android:contentDescription="The status icon of this request."
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="From: location"
        android:textSize="15sp"
        android:id="@+id/textView_fromLocation"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Price: $XX.XX"
        android:textSize="15sp"
        android:id="@+id/textView_price"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="To: location brap brap 101010108 street"
        android:textSize="15sp"
        android:id="@+id/textView_toLocation"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="300dp"
        android:text="Description: Take me to the frat house"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_description"
        android:textSize="15sp"
        android:clickable="false"
        android:focusable="false" />
</GridLayout>