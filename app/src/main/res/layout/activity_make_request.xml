<?xml version="1.0" encoding="utf-8"?>
<!-- TODO potentially make this style like the other screens (user profile stuff??) -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:focusableInTouchMode="true" >
        <!-- line above from https://goo.gl/LRzzp1, author: Mike T, retrieved: October 30th, 2016 -->

        <TextView
            android:text="Choose Location(s) with Map"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <!-- HOLDS THE GEO-LOCATION CHOICE BUTTONS -->
        <!-- TODO decide how we're getting to the map view...one or two buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="20">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button_startLocation"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableTop="@drawable/ic_location_on"
                android:drawablePadding="-20sp"
                android:text="Start"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text=". . ."
                android:textAlignment="center"
                android:layout_weight="2"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button_endLocation"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableTop="@drawable/ic_location_on"
                android:drawablePadding="-20sp"
                android:text="End"
                android:textSize="15sp"/>

        </LinearLayout>

        <!-- START LOCATION TEXT ENTRY -->

        <!-- END LOCATION TEXT ENTRY -->

        <!-- TODO make the button more explicit -->
        <!-- FARE TEXT ENTRY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fare estimate:"
            android:layout_marginTop="15dp"/>

        <!-- HOLDS "$" FARE ENTRY AND FARE BUTTON -->
        <!-- TODO need to fix the ratchet look of this part -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/textView_dollarSign"
                android:layout_weight="1"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="00.00"
                android:id="@+id/editText_fareEstimate"
                android:layout_weight="3.5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Estimate"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:background="@color/colorPrimary"
                android:id="@+id/button_estimateFare"/>

        </LinearLayout>

        <!-- DESCRIPTION TEXT ENTRY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a description:"
            android:layout_marginTop="15dp"/>

        <!-- TODO Find out how to keep this box a certain size and only allow a certian # of input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.46"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:maxLength="200"
            android:gravity="top|start"
            android:hint="Describe the ride you seek"
            android:background="#22000000"
            android:id="@+id/editText_description"
            android:scrollbars="vertical" />

        <!-- TODO work on button style, cohesive with app -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:id="@+id/button_submit"/>

    </LinearLayout>

</ScrollView>